<Window x:Class="Charts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        xmlns:my="clr-namespace:Charts">
    <Grid>
        <my:Chart Grid.Column="1"
                  Grid.ColumnSpan="3"
                  Grid.Row="0"
                  Grid.RowSpan="3"
                  x:Name="Chart"
                  Background="White"
                  BorderBrush="Black"
                  Margin="5,0,-2,2"
                  ChartTitle="Series" />
    </Grid>
</Window>